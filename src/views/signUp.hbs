<div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100" style="background-color: rgba(255, 255, 255, 0);">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-5 col-md-8">
            <form method="post" action="/signup" class="bg-white rounded shadow-5-strong p-5 mt-5">
                <h4>Sign up</h4>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form1Example1">User name</label>
                    <input type="text" id="form1Example1" class="form-control" name="userName" />
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="form1Example2">Password</label>
                    <input type="password" id="form1Example2" class="form-control" name="password"/>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block">Sign up</button>
            </form>
                <p class="text-center mt-3">Not registered? <a href="/login">Log in</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>