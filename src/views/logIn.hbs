<div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100" style="background-color: rgba(255, 255, 255, 0);">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-5 col-md-8">
            <form class="bg-white rounded shadow-5-strong p-5 mt-5" method="post" action="/login">
                <h4>Đăng nhập</h4>
              <!-- Email input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="form1Example1">Tên người dùng</label>
                <input type="text" id="form1Example1" class="form-control" name="userName" required/>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="form1Example2">Mật khẩu</label>
                <input type="password" id="form1Example2" class="form-control" name="password" required/>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
              <p class="text-center mt-3">Bạn chưa có tài khoản? <a href="/signup">Tạo tài khoản</a></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>